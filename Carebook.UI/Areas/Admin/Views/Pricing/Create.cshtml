@model PricingViewModel
@{
    ViewData["title"] = "Araç Fiyatlandırma";
}

<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Fiyat Ekle</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="table-responsive " style="width:100%">

            <div class="mt-2 container">
                <form method="post" asp-action="Create">
                    @if (!ViewContext.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            @Html.ValidationSummary()
                        </div>
                    }

                    <div class="form-row">
                        <div class="col-md-4 mb-3 form-group">
                            <label asp-for="CarId">Araç Adı</label>
                            <select class="custom-select" asp-for="CarId" asp-items="ViewBag.Pricing">
                                <option selected="selected" value="">Araç Seçiniz</option>
                            </select>
                            <span asp-validation-for="CarId"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="HourlyRate">Saatlik Kiralama Ücreti</label>
                            <input type="number" asp-for="HourlyRate" class="form-control" id="book_off_date" placeholder="">
                            <span asp-validation-for="HourlyRate"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="DailyWages" class="label">Günlük Kiralama Ücreti</label>
                            <input type="number" asp-for="DailyWages" class="form-control" id="book_off_date" placeholder="">
                            <span asp-validation-for="DailyWages"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="MonthlyFee" class="label">Aylık Kiralama Ücreti</label>
                            <input type="number" asp-for="MonthlyFee" class="form-control" id="book_off_date" placeholder="">
                            <span asp-validation-for="MonthlyFee"></span>
                        </div>

                    </div>
                    <div class="col-md-4 mb-3 ml-4 form-group">
                        <input asp-for="Enabled" class="form-check-input" type="checkbox">
                        <label id="check" asp-for="Enabled" class="form-check-label">Pasif</label>
                    </div>

                    <button type="submit" class="btn btn-primary mb-2">
                        <i class="fa fa-save"></i> Kaydet
                    </button>
                    <a class="btn btn-link" asp-action="Index">İptal</a>
                </form>
            </div>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</section>



@section Scripts {
   @*  <partial name="_ValidationScriptsPartial" /> *@
    <script src="~/js/Projects.js"></script>
}